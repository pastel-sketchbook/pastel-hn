{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "Hacker News",
  "version": "0.1.0",
  "identifier": "com.wasmhn.app",
  "build": {
    "frontendDist": "../web/dist",
    "devUrl": "http://localhost:8330",
    "beforeDevCommand": { "cwd": "../web", "script": "bun run dev" },
    "beforeBuildCommand": { "cwd": "../web", "script": "bun run build" }
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Hacker News | Cyberpunk Edition",
        "width": 1920,
        "height": 1080,
        "minWidth": 1024,
        "minHeight": 768,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
