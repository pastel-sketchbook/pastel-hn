{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "pastel-hn",
  "version": "0.17.0",
  "identifier": "org.pastelhn.desktop",
  "build": {
    "frontendDist": "../web/dist",
    "devUrl": "http://localhost:8330",
    "beforeDevCommand": { "cwd": "../web", "script": "bun run dev" },
    "beforeBuildCommand": { "cwd": "../web", "script": "bun run build" }
  },
  "app": {
    "withGlobalTauri": true,
    "security": {
      "csp": null
    },
    "windows": []
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["pastelhn"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/16x16.png",
      "icons/32x32.png",
      "icons/64x64.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/256x256.png",
      "icons/512x512.png",
      "icons/icon.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
