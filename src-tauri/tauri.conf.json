{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "pastel-hn",
  "version": "0.13.0",
  "identifier": "org.pastelhn.desktop",
  "build": {
    "frontendDist": "../web/dist",
    "devUrl": "http://localhost:8330",
    "beforeDevCommand": { "cwd": "../web", "script": "bun run dev" },
    "beforeBuildCommand": { "cwd": "../web", "script": "bun run build" }
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "pastel-hn | The Best Hacker News Client",
        "width": 1920,
        "height": 1080,
        "minWidth": 1024,
        "minHeight": 768,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/16x16.png",
      "icons/32x32.png",
      "icons/64x64.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/256x256.png",
      "icons/512x512.png",
      "icons/icon.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
